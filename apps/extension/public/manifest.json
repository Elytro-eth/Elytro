{
  "manifest_version": 3,
  "name": "Elytro",
  "version": "0.0.1",
  "description": "Elytro Wallet Extension",
  "icons": {
    "16": "public/icon16-dark.png",
    "48": "public/icon48-dark.png",
    "128": "public/icon128-dark.png"
  },
  "side_panel": {
    "default_path": "src/side-panel.html"
  },
  "action": {
    "default_title": "Click to open Elytro wallet"
  },
  "permissions": ["activeTab", "storage", "tabs", "sidePanel"],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["src/tab.html"]
    }
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-scripts/index.ts"]
    }
  ]
}
